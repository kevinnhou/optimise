{
  "$schema": "https://biomejs.dev/schemas/2.2.0/schema.json",
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "**",
      "!bun.lock",
      "!**/*.css",
      "!**/.next",
      "!**/dist",
      "!**/.turbo",
      "!**/dev-dist",
      "!**/.vscode",
      "!**/routeTree.gen.ts",
      "!**/.source",
      "!packages/ui/src/components/shadcn/*"
    ]
  },
  "javascript": {
    "formatter": {
      "jsxQuoteStyle": "double",
      "quoteProperties": "asNeeded",
      "quoteStyle": "double"
    }
  },
  "linter": {
    "rules": {
      "performance": {
        "noNamespaceImport": "off"
      },
      "a11y": {
        "noSvgWithoutTitle": "off"
      },
      "nursery": {
        "useConsistentTypeDefinitions": "off"
      }
    }
  },
  "extends": ["ultracite"]
}
